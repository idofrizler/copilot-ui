{
  "name": "copilot-skins",
  "version": "1.0.0",
  "description": "A beautiful native desktop GUI for GitHub Copilot",
  "main": "./out/main/index.js",
  "author": "Ido Frizler",
  "license": "MIT",
  "scripts": {
    "dev": "npm run prebuild-info && electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "start": "npm run prebuild-info && electron-vite dev",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:components": "vitest run --config vitest.config.ts tests/components",
    "test:e2e": "npm run build && npx playwright test",
    "test:e2e:headed": "npm run build && npx playwright test --headed",
    "test:all": "npm run test && npm run test:e2e",
    "postinstall": "npx @electron/rebuild -f -w node-pty",
    "prebuild-info": "node scripts/build-info.js",
    "clean": "rm -rf out release/mac-arm64",
    "dist": "npm run clean && npm run prebuild-info && electron-vite build && electron-builder --mac --dir && node -e \"const pkg=require('./package.json'); const {execSync}=require('child_process'); const dmg='release/Copilot-Skins-'+pkg.version+'-arm64.dmg'; execSync('hdiutil create -volname \\'Copilot Skins\\' -srcfolder release/mac-arm64 -ov -format UDZO '+dmg, {stdio:'inherit'})\""
  },
  "build": {
    "appId": "com.idofrizler.copilot-skins",
    "productName": "Copilot Skins",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns"
    }
  },
  "dependencies": {
    "@github/copilot-sdk": "0.1.15",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/xterm": "^6.0.0",
    "electron-log": "^5.4.3",
    "electron-store": "^11.0.0",
    "node-pty": "^1.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@electron/rebuild": "^4.0.2",
    "@playwright/test": "^1.58.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.0",
    "electron": "^28.1.0",
    "electron-builder": "^26.4.0",
    "electron-vite": "^2.0.0",
    "jsdom": "^27.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
