{
  "name": "copilot-skins",
  "version": "1.0.0",
  "description": "A beautiful native desktop GUI for GitHub Copilot",
  "main": "./out/main/index.js",
  "author": "Ido Frizler",
  "license": "MIT",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "start": "electron-vite dev",
    "dist": "electron-vite build && electron-builder --mac --dir && hdiutil create -volname 'Copilot Skins' -srcfolder release/mac-arm64 -ov -format UDZO release/Copilot-Skins-1.0.0-arm64.dmg"
  },
  "build": {
    "appId": "com.idofrizler.copilot-skins",
    "productName": "Copilot Skins",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns"
    }
  },
  "dependencies": {
    "@github/copilot-sdk": "0.1.15",
    "electron-log": "^5.4.3",
    "electron-store": "^11.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.0",
    "electron": "^28.1.0",
    "electron-builder": "^26.4.0",
    "electron-vite": "^2.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
